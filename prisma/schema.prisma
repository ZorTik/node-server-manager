generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

model Session {
  serviceId   String   @id @default(uuid())
  createdAt   DateTime @default(now())
  nodeId      String
  containerId String
}

model Service {
  serviceId String  @id @default(uuid())
  nodeId    String
  imageId   String?
  template  String
  port      Int
  options   Json
  meta      Json    @default("{}")
  env       Json
  network   Json?
  image     Image?  @relation(fields: [imageId], references: [id])
}

model ServiceMeta {
  serviceId String @id
  key       String @unique
  value     Json
}

// Persistent key-value storage for system-wide attributes.
model Meta {
  id        Int      @id @default(autoincrement())
  key       String   @unique
  value     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Image {
  id           String             @id
  templateId   String
  hash         String
  buildOptions ImageBuildOption[]
  services     Service[]
}

model ImageBuildOption {
  id      String @id @default(uuid())
  imageId String
  key     String
  value   String
  image   Image? @relation(fields: [imageId], references: [id])
}
